<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.alkfejl.controller.LeaderboardWindowController">
   <center>
      <TableView fx:id="scoreTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="positionColumn" prefWidth="75.0" text="Position" />
          <TableColumn fx:id="nameColumn" prefWidth="243.0" text="Name" />
          <TableColumn fx:id="scoreColumn" minWidth="0.0" prefWidth="98.0" text="Score" />
          <TableColumn fx:id="dateColumn" prefWidth="183.0" text="Date" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="20.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onClose" text="Close">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
